generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  chats         Chat[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Provider {
  id          String    @id @default(cuid())
  name        String    // Display name (e.g., "OpenAI", "Anthropic", "Ollama")
  provider    String    // Provider type: "openai", "anthropic", "google", "groq", "ollama", "custom"
  apiUrl      String    @default("https://api.openai.com/v1") // Base API URL
  apiKey      String    // Encrypted API key
  model       String    @default("gpt-3.5-turbo") // Default model for this provider
  temperature Float     @default(0.7)
  isDefault   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  personas    Persona[]
}

model Persona {
  id          String    @id @default(cuid())
  name        String
  bio         String
  personality String?
  providerId  String?   // Optional: override with specific provider
  model       String?   // Override provider's default model
  temperature Float?    // Override provider's default temperature
  avatarUrl   String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  messages    Message[]
  chats       PersonaOnChat[]
  provider    Provider? @relation(fields: [providerId], references: [id])
}

model Chat {
  id            String    @id @default(cuid())
  title         String    @default("New Chat")
  topic         String?
  isAutoMode    Boolean   @default(false)
  lastSpeakerId String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  creatorId     String?   // User ID of who created this chat (for access control)
  creator       User?     @relation(fields: [creatorId], references: [id], onDelete: SetNull)

  participants  PersonaOnChat[]
  messages      Message[]
}

model PersonaOnChat {
  id        String   @id @default(cuid())
  personaId String
  chatId    String
  joinedAt  DateTime @default(now())

  persona   Persona  @relation(fields: [personaId], references: [id], onDelete: Cascade)
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([personaId, chatId])
}

model Message {
  id          String    @id @default(cuid())
  content     String
  role        String
  personaId   String?
  personaName String?
  chatId      String
  createdAt   DateTime  @default(now())

  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  persona   Persona? @relation(fields: [personaId], references: [id], onDelete: SetNull)
}

model RateLimit {
  id          String   @id @default(cuid())
  key         String   @unique // providerId:day
  requests    Int      @default(0)
  limit       Int      @default(100)
  resetAt     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
